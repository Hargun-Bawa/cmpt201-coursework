#define _POSIX_C_SOURCE 200809
#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>

static char *message = "CTRL-C pressed\n";
void handler(int errno) { write(STDOUT_FILENO, message, strlen(message)); }

int main() {
  int i = fork();
  struct sigaction act;
  act.sa_flags = 0;
  act.sa_handler = handler;
  sigemptyset(&act.sa_mask);
  if (sigaction(SIGINT, &act, NULL) == -1) {
    perror("SIFACTION:() Failed");
    exit(EXIT_FAILURE);
  }
  while (1)
    sleep(1);
    if(i == 0){kill(i);

}
