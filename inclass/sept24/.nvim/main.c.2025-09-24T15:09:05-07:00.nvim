#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

static char *message = "CTRL-C pressed";
void handler(int message) { write(STDOUT_FILENO, message, strlen(message)); }

int main() {
  struct sigaction act = {0};
  act.sa_flags = 0;
  act.sa_sigaction = handler;
  sigemptyset(&act.sa_mask);
  if (sigaction(SIGINT, &act, NULL) == -1) {
    perror("sigaction");
    exit(EXIT_FAILURE);
  }
  while (true)
    sleep(1);
}
